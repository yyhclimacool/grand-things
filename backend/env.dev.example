# 开发环境配置示例
# 复制此文件为 .env.dev 并根据需要修改配置

# ===========================================
# 数据库配置
# ===========================================

# PostgreSQL 数据库连接 (使用 Docker Compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/grand_things

# 或者单独配置数据库连接参数
DB_HOST=localhost
DB_PORT=5432
DB_NAME=grand_things
DB_USER=postgres
DB_PASSWORD=postgres

# ===========================================
# 应用配置
# ===========================================

# 环境标识
RAILWAY_ENVIRONMENT=development

# 服务端口
PORT=8000

# JWT 配置
SECRET_KEY="453596c680cd8d7525bdf2c2187787e1caf426b919f3e2d362797899daf9f46b"
JWT_SECRET_KEY="3d4d3f6f2b88d9b3f6248454e287b34e49545b75a6cad75f02a0f03e68d8aad7"
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===========================================
# 跨域配置
# ===========================================

# 允许的前端地址 (开发环境)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ===========================================
# 可选服务配置
# ===========================================

# Redis 配置 (如果使用)
REDIS_URL=redis://localhost:6379/0

# 日志级别
LOG_LEVEL=DEBUG

# 是否启用SQL日志 (调试用)
DB_ECHO=false 